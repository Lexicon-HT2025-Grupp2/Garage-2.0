@model GarageStatisticsViewModel

<h2>Garage Statistics</h2>

<p><strong>Total vehicles:</strong> @Model.TotalVehicles</p>
<p><strong>Total wheels:</strong> @Model.TotalWheels</p>
<p><strong>Total revenue generated by vehicles currently in the garage:</strong> @Model.TotalRevenue.ToString("F2") kr</p>


<h3>Vehicles by Type</h3>
<ul>
    @foreach (var type in Model.VehiclesByType)
    {
        <li>@type.Key: @type.Value</li>
    }
</ul>

<h3>Vehicles by Color</h3>
<ul>
    @foreach (var color in Model.VehiclesByColor)
    {
        <li>@color.Key: @color.Value</li>
    }
</ul>