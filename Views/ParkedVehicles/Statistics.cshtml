@model GarageStatisticsViewModel

@{
    ViewData["Title"] = "Garage Statistics";
}

<div class="container mt-4">

    <h1 class="mb-4">
        <i class="bi bi-bar-chart"></i> Garage Statistics
    </h1>

    <!-- Summary cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Total Vehicles</h6>
                    <h3>@Model.TotalVehicles</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Total Wheels</h6>
                    <h3>@Model.TotalWheels</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Avg. Parking (h)</h6>
                    <h3>@Model.AverageParkingDurationHours.ToString("F1")</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted">Total Revenue</h6>
                    <h3>@Model.TotalRevenue.ToString("F2") kr</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue by type -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Revenue by Vehicle Type</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Vehicle Type</th>
                        <th>Revenue (kr)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.RevenueByType)
                    {
                        <tr>
                            <td>@item.Key</td>
                            <td>@item.Value.ToString("F2")</td>
                        </tr>
                    }
                </tbody>
            </table>

            <form method="get" asp-action="Statistics" class="text-end">
                <button class="btn btn-outline-primary">
                    <i class="bi bi-arrow-clockwise"></i> Refresh
                </button>
            </form>
        </div>
    </div>

    <div class="row">
        <!-- Vehicles by type -->
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Vehicles by Type</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var type in Model.VehiclesByType)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>@type.Key</span>
                                <span class="badge bg-secondary">@type.Value</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Vehicles by color -->
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Vehicles by Color</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var color in Model.VehiclesByColor)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>@color.Key</span>
                                <span class="badge bg-dark">@color.Value</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>
