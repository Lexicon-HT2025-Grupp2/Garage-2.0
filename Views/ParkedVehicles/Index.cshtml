@model IEnumerable<ParkedVehicleViewModel>

@{
    ViewData["Title"] = "Overview";
}

<h1>Overview</h1>

<p>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a asp-action="CheckIn" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Check In Vehicle
        </a>
        <form asp-action="Search" class="col-md-9">
            <div class="input-group">
                <input type="text" class="form-control" name="searchTerm" placeholder="Search..." />
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </div>
        </form>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </th>
            <th>
				@Html.DisplayNameFor(model => model.ParkedDuration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalTime)
            </td>
            <td>
                @item.FormattedDuration
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Details">
                    <i class="bi bi-eye"></i>
                </a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                    <i class="bi bi-pencil"></i>
                </a>
                <a asp-action="CheckOut" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Check Out">
                    <i class="bi bi-box-arrow-right"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
