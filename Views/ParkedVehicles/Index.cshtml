@if (!Model.Any())
{
    <div class="bg-info bg-opacity-10 border border-info text-info-emphasis rounded p-3 mb-3">
        <i class="bi bi-info-circle"></i> No vehicles currently parked in the garage.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["RegNoSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                            Registration Number <i class="bi bi-arrow-down-up"></i>
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["TypeSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                            Vehicle Type <i class="bi bi-arrow-down-up"></i>
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["ArrivalSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                            Arrival Time <i class="bi bi-arrow-down-up"></i>
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DurationSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                            Parked Duration <i class="bi bi-arrow-down-up"></i>
                        </a>
                    </th>
                    <th>Parking Spots</th>
                    <th>Owner</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegistrationNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArrivalTime)
                        </td>
                        <td>
                            @item.FormattedDuration
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParkingSpots)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Owner.FirstName)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Details">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="CheckOut" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Check Out">
                                <i class="bi bi-box-arrow-right"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-center my-4">
        <a asp-action="ParkingMap"
           asp-controller="ParkedVehicles"
           class="btn btn-outline-primary btn-lg px-5">
            <i class="bi bi-map me-2"></i>
            View Parking Map
        </a>
    </div>

}
