@model IEnumerable<DetailedParkedVehicleViewModel>

@{
    ViewData["Title"] = "Detailed View";
}

<h1>Detailed View</h1>

<p>
    <a asp-action="Create">Check in vehicle</a>
    <form asp-action="DetailedSearch">
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="searchTerm" placeholder="Search..." />
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </th>
            <th>
				@Html.DisplayNameFor(model => model.ParkedDuration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalTime)
                </td>
                <td>
					@Html.DisplayFor(modelItem => item.ParkedDuration)
				</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RegistrationNumber">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RegistrationNumber">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RegistrationNumber">Check out vehicle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
