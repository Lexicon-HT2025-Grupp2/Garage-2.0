@model ReceiptViewModel

@{
    ViewData["Title"] = "Receipt";
    var days = Model.TotalTime.Days;
    var hours = Model.TotalTime.Hours;
    var minutes = Model.TotalTime.Minutes;
}

<div class="receipt">
    <h2>Parking Receipt</h2>
    <p><strong>Registration Number:</strong> @Model.RegistrationNumber</p>
    <p><strong>Arrival Time:</strong> @Model.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</p>
    <p><strong>Departure Time:</strong> @Model.DepartureTime.ToString("yyyy-MM-dd HH:mm")</p>
    <p>
        <strong>Total Time:</strong>
        @if (days > 0)
        {
            @($"{days} d ")
        }
        @($"{hours} h {minutes} min")
    </p>
    <p><strong>Price:</strong> @Model.Price kr</p>
</div>

<a asp-action="Index" class="btn btn-primary">Back to List</a>
<button onclick="window.print()" class="btn btn-secondary">Print Receipt</button>