@model ParkedVehicle

@{
    ViewData["Title"] = "Check In Vehicle";
}

<h1>Check In Vehicle</h1>

@* <h4>ParkedVehicle</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="RegistrationNumber" class="control-label"></label>
                <input asp-for="RegistrationNumber" class="form-control" placeholder="e.g., ABC123" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" placeholder="e.g., Car" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" placeholder="e.g., Red" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" placeholder="e.g., Volvo" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" placeholder="e.g., V90" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NumberOfWheels" class="control-label"></label>
                <input asp-for="NumberOfWheels" class="form-control" type="number" min="0" max="20" />
                <span asp-validation-for="NumberOfWheels" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <input type="submit" value="CheckIn" class="btn btn-primary" />
            </div> *@

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Check In Vehicle</button>
            </div>
        </form>
    </div>
</div>

@* <div>
    <a asp-action="Index">Back to List</a>
</div> *@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
