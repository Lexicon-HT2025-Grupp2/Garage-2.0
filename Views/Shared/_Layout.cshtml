<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Garage_2.0</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ParkingMap.css" />
</head>
<body>
    <!-- Background image + overlay -->
    <div class="bg-photo"></div>
    <div class="bg-overlay"></div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-transparent mb-4">
            <div class="container">
                <a class="navbar-brand fw-bold text-dark" asp-controller="ParkedVehicles" asp-action="Index">Garage2.0</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav me-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Vehicles" asp-action="Index">
                                    <i class="bi bi-eye"></i> My Vehicles
                                </a>
                            </li>
                        }
                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="ParkedVehicles" asp-action="Index">
                                <i class="bi bi-eye"></i> Overview
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="ParkedVehicles" asp-action="Statistics">
                                <i class="bi bi-bar-chart-line"></i> Statistics
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="ParkedVehicles" asp-action="ParkingMap">
                                <i class="bi bi-map"></i> Parking Map
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Members" asp-action="Index">
                                    <i class="bi bi-people"></i> Members
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name = "_LoginPartial"/>
                </div>

            </div>
        </nav>
    </header>
    
    <!-- Flash messages outside of printable content -->
    <div class="container no-print">
        <partial name="_FlashMessages" />
    </div>

    <!-- Main content wrapped in white rounded block -->
    <main class="page-shell">
        <div class="container">
            <div class="content-card shadow">
                @RenderBody()
            </div>
        </div>
    </main>


    <footer class="text-center text-muted mt-4">
        <div class="container">
            &copy; 2025 - Garage2.0
        </div>
    </footer>

    <script>
        setTimeout(() => {
            document.querySelectorAll(".alert")
                .forEach(el => {
                    el.style.transition = "opacity 0.5s";
                    el.style.opacity = "0";
                    setTimeout(() => el.remove(), 500);
                });
        }, 3500);
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
