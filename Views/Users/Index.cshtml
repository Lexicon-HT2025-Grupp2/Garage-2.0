@model List<Garage_2._0.Models.UserOverviewVM>

<h2>Users overview</h2>

<div class="d-flex justify-content-end mb-3">
    <form method="get" class="input-group" style="max-width: 400px;">
        <input type="text" name="search" class="form-control" placeholder="Search user..." />
        <button type="submit" class="btn btn-outline-secondary">
            <i class="bi bi-search"></i>
        </button>
    </form>
</div>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Personnummer</th>
            <th>Number of vehicles</th>
            <th>Total cost</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.FullName</td>
                <td>@m.Personnummer</td>
                <td>@m.VehicleCount</td>
                <td>@m.TotalCost.ToString("F2") kr</td>
                <td>
                    <a asp-action="UserDetails" asp-route-id="@m.Id"
                       class="btn btn-sm btn-primary" title="User Details">
                        <i class="bi bi-person"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>